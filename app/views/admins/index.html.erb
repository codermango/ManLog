<div class='container'>
    <ul class="nav nav-tabs">
        <li id="li-manage-articles" role="presentation" class="active">
            <a href="#">文章管理</a>
        </li>
        <li id="li-write-article" role="presentation">
            <a href="#">写文章</a>
        </li>
    </ul>

    <div id="manage-articles" class="manage-pane">
        <% @articles_list.each do |article| %>
            <div class="row">
                <div class="col-sm-6">
                    <%= article.post_title %>
                </div>
                <div class="col-sm-6">
                    <%= link_to '删除文章', admins_index_path(:article_id => article.id), method: :delete, data: { confirm: 'Are you sure?' }%>
                </div>
            </div>
        <% end %>
    </div>

    <div id="write-article" class="manage-pane">
        <%= form_for :article, url: articles_path do |f| %>        
        <p>
            <%= f.label :post_title %>        
            <br>        
            <%= f.text_field :post_title %></p>

        <p>
            <%= f.label :post_text %>        
            <br>        
            <%= f.text_area :post_text %></p>

        <p>
            <%= f.submit %></p>
        <% end %>        
    </div>

</div>