<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for :admins do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.submit "Login", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
