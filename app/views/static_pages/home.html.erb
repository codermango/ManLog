<div class="container">
    <div class="row">
        <div class="col-sm-8 blog-main">
            <% @articles_for_show.each do |article_show| %>
                <div class="blog-post">
                    <h2 class="blog-post-title">
                        <%= link_to article_show[:title], article_path(article_show[:id]) %>
                    </h2>
                    <p class="blog-post-meta">
                        <%= article_show[:time] %> by
                        <a href="#">Mark</a>
                    <p>
                    <p>
                        <%= article_show[:markdown_text] %>
                    </p>
                </div> <!-- /.blog-post -->
                <hr>
            <% end %>

        </div>
        <!-- /.blog-main -->            

        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
            <div class="sidebar-module sidebar-module-inset">
                <h4><b>关于</b></h4>
                <p>
                    姓名：Mark <br>
                    目前：旅居斯德哥尔摩 <br>
                    理想：编程，写作，环游世界 <br>
                </p>
            </div>

            <div class="sidebar-module sidebar-module-inset">
                <%= image_tag("mark_weichat.jpg", class: "wechat-image") %>
            </div>

            <div class="sidebar-module sidebar-module-inset">
                <iframe width="100%" height="550" class="share_self"  frameborder="0" scrolling="no" src="http://widget.weibo.com/weiboshow/index.php?language=&width=0&height=550&fansRow=1&ptype=1&speed=0&skin=2&isTitle=1&noborder=0&isWeibo=1&isFans=0&uid=1937503763&verifier=88272bc2&colors=F5F5F5,F5F5F5,666666,0082cb,ecfbfd&dpc=1"></iframe>
            </div>
            <div class="sidebar-module sidebar-module-inset">
            <h4><b>Links</b></h4>
                <ol class="list-unstyled">
                    <li>
                        <a href="https://github.com/codermango">GitHub</a>
                    </li>
                    <li>
                        <a href="https://instagram.com/codermango/">Instagram</a>
                    </li>
                </ol>
            </div>

        </div><!-- /.blog-sidebar --> 
    </div><!-- /.row -->            
</div> <!-- container -->


